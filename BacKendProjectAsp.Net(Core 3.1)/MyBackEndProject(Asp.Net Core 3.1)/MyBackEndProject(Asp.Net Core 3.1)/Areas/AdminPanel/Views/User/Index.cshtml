@model List<UserVm>
@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> User Table List</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <thead class=" text-primary">
                                <tr class="text-center">
                                    <th>
                                        FullName
                                    </th>
                                    <th>
                                        UserName
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        UserPosition
                                    </th>
                                    <th>
                                        IsActivited
                                    </th>
                                    <th>
                                        Role
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>
                                            @item.Fullname

                                        </td>
                                        <td>
                                            @item.Username
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.UserPosition
                                        </td>
                                        <td >
                                          
                                                @item.IsActivited
                                         

                                           
                                        </td>
                                        <td>
                                            @item.Role
                                        </td>
                                        <td>
                                            <a asp-area="AdminPanel" asp-controller="User" asp-action="ChangeRole" asp-route-id="@item.Id" class="btn btn-primary btn-sm"> <abbr title="ChangeRole"><i class="fas fa-user"></i></abbr> </a>
                                          
                                                @if (item.IsActivited)
                                                {
                                                        <span class="texts1">
                                                            <a class="btn btn-primary btn-sm myshowbtn" value="false" id="@item.Id">Activate</a>
                                                        </span>     

                                                   




                                                }
                                                else
                                                {
                                                        <span class="texts2">
                                                            <a class="btn btn-primary btn-sm myshowbtn" value="true" id="@item.Id">Deactivate</a>

                                                        </span>
                                                  


                                                }

                                           


                                            </td>
                                    </tr>

                                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.all.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>


        $(document).on("click", ".myshowbtn", function (e) {

            let Id = $(this).attr("id");
            let IsActivated = $(this).attr("value");

            swal("IsActivited User?", {
                dangerMode: true,
                buttons: true,

            }).then(buttons => {
                if (buttons) {

                    $.ajax({
                        url: "/AdminPanel/User/IsActivate?Id=" + Id + "&IsActivated=" + IsActivated,
                        type:"Get",
                        success: function (res) {
                            if (res.isActivated) {
                                    let span = ` <a class="btn btn-primary btn-sm myshowbtn" value="false" id="@@item.Id">Activate</a>`
                                    $(".texts1").empty();
                                    $(".texts1").append(span)
                                } else {
                                    let span = `  <a class="btn btn-primary btn-sm myshowbtn" value="true" id="@@item.Id">Deactivate</a>`
                                    $(".texts2").empty();
                                    $(".texts2").append(span)
                                }
                           
                        }


                    })
                }
            }
            );
            e.preventDefault();

        })


    </script>
}

