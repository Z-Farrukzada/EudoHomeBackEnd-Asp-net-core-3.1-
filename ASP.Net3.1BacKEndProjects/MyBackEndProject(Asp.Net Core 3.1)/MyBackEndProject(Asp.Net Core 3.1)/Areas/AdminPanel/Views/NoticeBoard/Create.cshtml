@model NoticeBoard
@{
    ViewData["Title"] = "Create";
}
@section style{
    <style>
        .ck-rounded-corners .ck.ck-editor__main > .ck-editor__editable, .ck.ck-editor__main > .ck-editor__editable.ck-rounded-corners {
            background-color: rgb(39, 41, 61);
        }
    </style>

}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="title">NoticeBoard Create</h3>
                    </div>
                    <div class="card-body ">

                        <div class="row ">
                            <div asp-validation-summary="ModelOnly" class="text-white"></div>
                            <div class="col-md-12 px-md-1">
                                <div class="form-group">
                                    <label asp-for="Title" class="ml-3"></label>
                                    <input asp-for="Title" class="form-control" placeholder="Title">
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 pr-md-1">
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <textarea asp-for="Description" class="form-control bg-dark" rows="4"></textarea>
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-11 pr-md-1 ml-4">
                            <div class="form-group">
                                <label asp-for="NoticeTime"></label>
                                <textarea asp-for="NoticeTime" class="form-control  bg-dark"  rows="4"></textarea>
                                <span asp-validation-for="NoticeTime"></span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-fill btn-primary">Create</button>
                        <a class="btn btn-primary mx-3 float-right" asp-controller="NoticeBoard" asp-action="Index" asp-area="AdminPanel"> Back </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Script{
    <partial name="_ScriptRender" />
    <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>


    <script>

        ClassicEditor
            .create(document.querySelector("#Description"))
            .catch(error => {
                console.error(error);
            });

        ClassicEditor
            .create(document.querySelector("#NoticeTime"))
            .catch(error => {
                console.error(error);
            });
    </script>

}
